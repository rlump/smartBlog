<article style="background-color:#E4ECF5">

  <div style="margin-left:10px">
    <h3><a href="#"><%= post.title %></a></h3>
    <h6>Written on <%= post.date %></h6>
    <div class="row">
      <div class="large-6 columns">
        <%= raw post.image_text %>
      </div>
      <div class="large-5 left columns">
        <img src=<%= post.image %> />
      </div>
    </div>
    <%= raw post.content %>
  </div>

</article>

